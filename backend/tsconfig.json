{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ESNext"],
      "baseUrl": "./",
  
      "strict": true,

      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,

      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
  
      "paths": {
        "@config/*": ["src/config/*"],
        "@controllers/*": ["src/controllers/*"],
        "@middleware/*": ["src/middleware/*"],
        "@models/*": ["src/models/*"],
        "@routes/*": ["src/routes/*"],
        "@services/*": ["src/services/*"],
        "@utils/*": ["src/utils/*"] 
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",         
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
}