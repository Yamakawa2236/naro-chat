{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./api",
      "lib": ["ESNext"],
      "baseUrl": "./",
  
      "strict": true,

      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,

      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
  
      "paths": {
        "@config/*": ["api/config/*"],
        "@controllers/*": ["api/controllers/*"],
        "@middleware/*": ["api/middleware/*"],
        "@models/*": ["api/models/*"],
        "@routes/*": ["api/routes/*"],
        "@services/*": ["api/services/*"],
        "@utils/*": ["api/utils/*"] 
      }
    },
    "include": [
      "api/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",         
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
}